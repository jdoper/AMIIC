<div class="container">
  <% if notice %>
    <div class="alert alert-success alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <%= notice %>
    </div>
  <% end %>

  <h2 class="name-header">Registros recentes</h2>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th class="center-text">Nome</th>
        <th class="center-text">Idade</th>
        <th class="center-text">Registro</th>
        <th class="center-text">Data</th>
        <th colspan="2" class="center-text">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @registries.each do |registry| %>
        <tr>
          <td><%= registry.nome %></td>
          <td><%= registry.idade %></td>
          <td><%= registry.registro %></td>
          <td><%= registry.data %></td>
          <td class="center-text"><%= link_to 'Mostrar', registry %></td>
          <!--<td><%= link_to 'Editar', edit_registry_path(registry) %></td>-->
          <td class="center-text"><%= link_to 'Excluir', registry, method: :delete, data: { confirm: 'Deseja realmente excluir o cadastro?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="separador">
    <%= link_to 'Gerar relatório', home_relatorio_path(format: :xls), :class => 'btn btn-success' %>
  </div>
</div>