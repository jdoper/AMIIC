<!DOCTYPE html>
<html>
	<head>
	  <title>AMIIC</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body style="background: #F8F8F8">
		<% if user_signed_in? %>
			<div class="nav-background">
				<nav class="navbar navbar-inverse">
					<div class="container">
						<div class="navbar-header">
							<%= link_to 'AMIIC', root_url, :class => 'navbar-brand' %>
						</div>
						<div id="navbar" class="collapse navbar-collapse">
							<ul class="nav navbar-nav">
								<li><%= link_to 'Home', registries_path %></li>
								<li><%= link_to 'Busca', home_search_path %></li>
								<% if current_user.admin? %>
									<li><%= link_to 'Administrativo', home_admin_path %></li>
								<% end %>
							</ul>
							<ul class="nav navbar-nav navbar-right">
								<li><%= link_to 'Editar conta', edit_user_registration_path %></li>
								<li><a href="/logout">Sair</a></li>
							</ul>
						</div>
					</div>
				</nav>
			</div>
		<% end %>

		<%= yield %>
	</body>
</html>
