<!DOCTYPE html>
<html>
	<head>
	  <title>QUIC - Qualidade de Vida em Insuficiência Cardíaca</title>
		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
		<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<% if user_signed_in? %>
			<div class="header">
				<nav class="navbar navbar-inverse navbar-fixed-top">
					<div class="container">
						<div class="navbar-header">
							<b><%= link_to 'QUIC', root_url, :class => 'navbar-brand' %></b>
						</div>
						<div id="navbar" class="collapse navbar-collapse">
							<ul class="nav navbar-nav">
								<li class="active"><%= link_to 'Home', root_url, :class => 'link-active' %></li>
								<li><%= link_to 'Busca', home_search_path %></li>
								<% if current_user.admin? %>
									<li><%= link_to 'Administrativo', home_admin_path %></li>
								<% end %>
							</ul>
							<ul class="nav navbar-nav navbar-right">
								<li><%= link_to 'Editar conta', edit_user_registration_path %></li>
								<li><a href="/logout">Sair</a></li>
							</ul>
						</div>
					</div>
				</nav>
			</div>
		<% end %>

		<div class="corpo">
			<%= yield %>
		</div>

		<footer>
			<div class="container">
				<%= image_tag "institucional.png" %>
				<!--<img src=<%=asset_path("institucional.png")%> />-->
			</div>
		</footer>
	</body>
</html>
